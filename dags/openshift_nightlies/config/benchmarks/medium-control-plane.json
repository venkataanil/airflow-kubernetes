{
    "benchmarks": [
        {
            "name": "scale-120",
            "workload": "scale-perf",
            "command": "./run_scale_fromgit.sh",
            "env": {
                "SCALE": "120",
                "METADATA_COLLECTION": "false",
                "WORKLOAD_NODE_ROLE": "worker"
            }
        },
        {
            "name": "node-density",
            "workload": "kube-burner",
            "trigger_rule": "all_done",
            "command": "./run.sh",
            "env": {
                "WORKLOAD": "node-density",
                "PODS_PER_NODE": "245",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "CLEANUP_TIMEOUT": "360m"
            }
        },
        {
            "name": "node-density-sleep",
            "workload": "kube-burner",
            "custom_cmd": "sleep 30m"
        },
        {
            "name": "node-density-cni",
            "workload": "kube-burner",
            "trigger_rule": "all_done",
            "command": "./run.sh",
            "env": {
                "WORKLOAD": "node-density-cni",
                "PODS_PER_NODE": "80",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "CLEANUP_TIMEOUT": "360m"
            }
        },
        {
            "name": "node-density-cni-sleep",
            "workload": "kube-burner",
            "custom_cmd": "sleep 30m"
        },
        {
            "name": "cluster-density-v2",
            "workload": "kube-burner-ocp-wrapper",
            "trigger_rule": "all_done",
            "command": "./run.sh",
            "env": {
                "WORKLOAD": "cluster-density-v2",
                "ITERATIONS": "800",
                "PLATFORM_ALERTS": "false",
                "CLEANUP": "true",
                "EXTRA_FLAGS": "--churn=false --gc=false --timeout=6h"
            }
        },
        {
            "name": "cluster-density-sleep",
            "workload": "kube-burner",
            "custom_cmd": "sleep 30m"
        },
        {
            "name": "node-density-cni-networkpolicy",
            "workload": "kube-burner",
            "trigger_rule": "all_done",
            "command": "./run.sh",
            "env": {
                "WORKLOAD": "node-density-cni-networkpolicy",
                "PODS_PER_NODE": "80",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "CLEANUP_TIMEOUT": "360m"
            }
        }
    ]
}
