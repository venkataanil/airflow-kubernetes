{
    "benchmarks": [
        {
            "name": "scale-24",
            "workload": "scale-perf",
            "command": "./run_scale_fromgit.sh",
            "env": {
                "SCALE": "24",
                "METADATA_COLLECTION": "true",
                "WORKLOAD_NODE_ROLE": "worker"
            }
        },
        {
            "name": "cluster-density-v2",
            "workload": "kube-burner-ocp-wrapper",
            "trigger_rule": "all_done",
            "command": "./run.sh",
            "env": {
                "WORKLOAD": "cluster-density-v2",
                "ITERATIONS": "500",
                "PLATFORM_ALERTS": "false",
                "EXTRA_FLAGS": "--churn=true --churn-duration=1h --churn-percent=10 --churn-delay=10m --gc=false --timeout=6h"
            }
        }
    ]
}
